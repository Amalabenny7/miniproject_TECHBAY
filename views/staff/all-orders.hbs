<main id="main" class="main">

    <section>
        <div class="container my-5">
            <h4 class="mb-4">Manage All Orders</h4>

            {{!-- <a href="/admin/cancel-all-orders" onclick="return confirm('Are You Sure to Cancel All Orders ?')"
                class="btn btn-danger mb-2">Cancel All Orders</a> --}}

            <div class="table-responsive" style="overflow: visible;">
                <table class="table table-bordered" id="table">
                    <thead class="table-dark">
                        <tr class="align-middle">
                            {{!-- <th scope="col">Date</th> --}}
                            <th scope="col">User Details</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Payment</th>
                            <th scope="col">Status</th>
                            <th scope="col">Cancel</th>
                            <th scope="col">View</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each orders}}
                        <tr class="align-middle">
                            {{!-- <td>{{this.orderObject.date}}</td> --}}
                            <td>
                                <b>Name : </b> {{this.orderObject.user.Name}} <br>
                                <b>Email : </b> {{this.orderObject.user.Email}} <br>
                                <b>Phone : </b> {{this.orderObject.user.Phone}} <br>
                                <b>Address : </b> {{this.orderObject.user.Address}} <br>
                                <b>Pincode : </b> {{this.orderObject.user.Pincode}} <br>
                                <b>District : </b> {{this.orderObject.user.District}} <br>
                            </td>
                            <td>{{this.orderObject.totalAmount}}/-</td>
                            <td>{{this.orderObject.paymentMethod}}</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button"
                                        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        {{this.orderObject.status}}
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item"
                                                href="/staff/change-status/?status=placed&orderId={{this._id}}">placed</a>
                                        </li>
                                        <li><a class="dropdown-item"
                                                href="/staff/change-status/?status=rejected&orderId={{this._id}}">rejected</a>
                                        </li>
                                        <li><a class="dropdown-item"
                                                href="/staff/change-status/?status=shipping&orderId={{this._id}}">shipping</a>
                                        </li>
                                        <li><a class="dropdown-item"
                                                href="/staff/change-status/?status=shipped&orderId={{this._id}}">shipped</a>
                                        </li>
                                        <li><a class="dropdown-item"
                                                href="/staff/change-status/?status=delivering&orderId={{this._id}}">delivering</a>
                                        </li>
                                        <li><a class="dropdown-item"
                                                href="/staff/change-status/?status=delivered&orderId={{this._id}}">delivered</a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                <a href="/staff/cancel-order/{{this._id}}"
                                    onclick="return confirm('Are You Sure to Cancel This Order ?')"
                                    class="btn btn-danger">Cancel</a>
                            </td>
                            <td>
                                <a href="/staff/view-ordered-products/{{this._id}}" class="btn btn-primary">Product</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</main>