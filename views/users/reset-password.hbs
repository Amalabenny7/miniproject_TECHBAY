<div class="container">
    <br><br><br><br><br><br><br><br><br>
    <h4>Password Reset</h4><br>

    <form action="/reset-password" method="POST">
        <div>
            <label for="password" class="mb-2">New Password:</label>
            <input type="password" name="Password" class="form-control mb-3" id="password" placeholder="New Password"
                required>
            {{#if errors.password}}<p>{{errors.password}}</p>{{/if}}
        </div>
        <div>
            <label for="repassword" class="mb-2">Confirm New Password:</label>
            <input type="password" name="Repassword" class="form-control" id="repassword"
                placeholder="Confirm New Password" required>
            {{#if errors.repassword}}<p class="text-danger mt-3">{{errors.repassword}}</p>{{/if}}
        </div>
        <button type="submit" class="mt-3 btn btn-dark">Reset Password</button>
        <a href="/signin" class="mt-3 btn btn-secondary">Cancel</a>
    </form>
</div>