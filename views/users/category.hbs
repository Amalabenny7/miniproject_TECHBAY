<div class="container">
    <div class="filter-buttons mb-4">
        <button class="btn btn-dark" onclick="filterCards('all')">All</button>
        {{#each categories}}
        <button class="btn btn-dark" onclick="filterCards('{{this.cname}}')">{{this.cname}}</button>
        {{/each}}
    </div>

    <div class="cards-container">

        <div class="row g-3">
            {{#each products}}
            <div class="col-lg-3">
                <div class="card card2 p-4" data-category="{{this.icategory}}">
                    <div class="pic mb-4"><img src="/images/product-images/{{this._id}}.png" class="img-fluid" alt="">
