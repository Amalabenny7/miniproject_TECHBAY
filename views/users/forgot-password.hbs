<div class="container">
    <br><br><br><br><br><br><br><br><br><br><br>
    <h4>Password Reset</h4><br>
    <form action="/forgot-password" method="POST">
        <div>
            <label for="phone" class="mb-2">Enter your registered phone number:</label>
            <input type="text" class="form-control" name="Phone" id="phone" placeholder="Phone number" required>
            {{#if errors.phone}}<p>{{errors.phone}}</p>{{/if}}
        </div>
        <button type="submit" class="mt-3 btn btn-dark">Submit</button>
        <a href="/signin" class="mt-3 btn btn-secondary">Cancel</a>

    </form>
</div>